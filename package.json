{
  "private": true,
  "renovate": {
    "extends": [
      "config:js-lib",
      "algolia"
    ]
  },
  "workspaces": [
    "src/*"
  ],
  "eslintConfig": {
    "extends": "algolia",
    "rules": {
      "import/no-commonjs": "off",
      "valid-jsdoc": "off"
    }
  },
  "eslintIgnore": [
    "src/*/node_modules"
  ],
  "engines": {
    "node": "^9.4.0",
    "yarn": "^1.3.2"
  },
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "eslint": "4.18.1",
    "eslint-config-algolia": "13.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-prettier": "2.6.0",
    "prettier": "1.10.2"
  }
}
